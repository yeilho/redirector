{
  "manifest_version": 3,
  "name": "URL Redirector",
  "version": "1.0",
  "description": "Redirect URLs based on mappings provided in a YAML file.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": {
    "keyword": "go"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["mappings.yaml"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "48": "icons/go48.png",
    "128": "icons/go128.png"
  }
}
